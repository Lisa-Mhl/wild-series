{% extends 'base.html.twig' %}

{% block title %}Program{% endblock %}

{% block body %}
    <h1>Program</h1>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <td class="text-primary">{{ program.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td class="text-primary">{{ program.title }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td class="text-primary">{{ program.summary }}</td>
            </tr>
            <tr>
                <th>Poster</th>
                <td><img class="card-img-top" id="tab_poster" src="{{ program.poster }}" alt="{{ program.title }}"></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('program_index') }}">back to list</a>

    <a href="{{ path('program_edit', {'id': program.id}) }}">edit</a>

    {{ include('program/_delete_form.html.twig') }}
{% endblock %}
